FROM golang:1.21-alpine AS build

WORKDIR /app

# Install dependencies
RUN apk add --no-cache git gcc musl-dev

# Copy go mod files
COPY agent/go.mod agent/go.sum ./
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o agent .

# Final stage
FROM alpine:latest

RUN apk --no-cache add ca-certificates curl docker-cli

WORKDIR /root/

COPY --from=build /app/agent .

EXPOSE 8080

ENTRYPOINT ["./agent"]

