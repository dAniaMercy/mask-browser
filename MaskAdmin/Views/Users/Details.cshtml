@model MaskAdmin.Models.User
@{
    ViewData["Title"] = $"User: {Model.Username}";
    ViewData["LayoutClass"] = "container-fluid";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Users" asp-action="Index">Users</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Username</li>
                </ol>
            </nav>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="bi bi-person-circle"></i> @Model.Username
                @if (Model.IsAdmin)
                {
                    <span class="badge bg-danger">Admin</span>
                }
            </h1>
        </div>
        <div>
            <a asp-controller="Users" asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Left Column - User Info -->
        <div class="col-xl-8">
            <!-- User Information Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">User Information</h6>
                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#editUserModal">
                        <i class="bi bi-pencil"></i> Edit
                    </button>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-xs text-muted mb-1">USER ID</h6>
                            <p class="mb-0"><code>@Model.Id</code></p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-xs text-muted mb-1">USERNAME</h6>
                            <p class="mb-0"><strong>@Model.Username</strong></p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-xs text-muted mb-1">EMAIL</h6>
                            <p class="mb-0">@Model.Email</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-xs text-muted mb-1">STATUS</h6>
                            <p class="mb-0">
                                @if (Model.IsBanned)
                                {
                                    <span class="badge bg-danger"><i class="bi bi-ban"></i> Banned</span>
                                }
                                else if (Model.IsFrozen)
                                {
                                    <span class="badge bg-warning"><i class="bi bi-snow"></i> Frozen</span>
                                }
                                else if (Model.IsActive)
                                {
                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary"><i class="bi bi-x-circle"></i> Inactive</span>
                                }
                            </p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-xs text-muted mb-1">BALANCE</h6>
                            <p class="mb-0">
                                <span class="h5 text-success">$@Model.Balance.ToString("N2")</span>
                                <button class="btn btn-sm btn-outline-success ms-2" data-bs-toggle="modal" data-bs-target="#adjustBalanceModal">
                                    <i class="bi bi-cash-stack"></i> Adjust
                                </button>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-xs text-muted mb-1">2FA ENABLED</h6>
                            <p class="mb-0">
                                @if (Model.TwoFactorEnabled)
                                {
                                    <span class="badge bg-success"><i class="bi bi-shield-check"></i> Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary"><i class="bi bi-shield-x"></i> No</span>
                                }
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-xs text-muted mb-1">CREATED AT</h6>
                            <p class="mb-0">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-xs text-muted mb-1">LAST LOGIN</h6>
                            <p class="mb-0">
                                @if (Model.LastLoginAt.HasValue)
                                {
                                    @Model.LastLoginAt.Value.ToString("yyyy-MM-dd HH:mm:ss")
                                    if (!string.IsNullOrEmpty(Model.LastLoginIp))
                                    {
                                        <br /><small class="text-muted">from @Model.LastLoginIp</small>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Never</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Subscription Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Subscription</h6>
                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#subscriptionModal">
                        <i class="bi bi-pencil"></i> Manage
                    </button>
                </div>
                <div class="card-body">
                    @if (Model.Subscription != null)
                    {
                        <div class="row">
                            <div class="col-md-4">
                                <h6 class="text-xs text-muted mb-1">TIER</h6>
                                <p class="mb-3">
                                    <span class="badge bg-info fs-6">@Model.Subscription.Tier</span>
                                </p>
                            </div>
                            <div class="col-md-4">
                                <h6 class="text-xs text-muted mb-1">MAX PROFILES</h6>
                                <p class="mb-3"><strong>@Model.Subscription.MaxProfiles</strong> profiles</p>
                            </div>
                            <div class="col-md-4">
                                <h6 class="text-xs text-muted mb-1">PRICE</h6>
                                <p class="mb-3"><strong>$@Model.Subscription.Price.ToString("N2")</strong></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <h6 class="text-xs text-muted mb-1">START DATE</h6>
                                <p class="mb-0">@Model.Subscription.StartDate.ToString("yyyy-MM-dd")</p>
                            </div>
                            <div class="col-md-4">
                                <h6 class="text-xs text-muted mb-1">END DATE</h6>
                                <p class="mb-0">
                                    @if (Model.Subscription.EndDate.HasValue)
                                    {
                                        @Model.Subscription.EndDate.Value.ToString("yyyy-MM-dd")
                                    }
                                    else
                                    {
                                        <span class="text-muted">No expiration</span>
                                    }
                                </p>
                            </div>
                            <div class="col-md-4">
                                <h6 class="text-xs text-muted mb-1">STATUS</h6>
                                <p class="mb-0">
                                    @if (Model.Subscription.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Expired</span>
                                    }
                                </p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">
                            <i class="bi bi-inbox fs-1"></i><br />
                            No subscription assigned
                        </p>
                    }
                </div>
            </div>

            <!-- Browser Profiles Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Browser Profiles (@Model.BrowserProfiles.Count)
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.BrowserProfiles.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Status</th>
                                        <th>Server</th>
                                        <th>Created</th>
                                        <th>Runtime</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var profile in Model.BrowserProfiles)
                                    {
                                        <tr>
                                            <td><strong>@profile.Name</strong></td>
                                            <td>
                                                @switch (profile.Status)
                                                {
                                                    case MaskAdmin.Models.ProfileStatus.Running:
                                                        <span class="badge bg-success">Running</span>
                                                        break;
                                                    case MaskAdmin.Models.ProfileStatus.Stopped:
                                                        <span class="badge bg-secondary">Stopped</span>
                                                        break;
                                                    case MaskAdmin.Models.ProfileStatus.Error:
                                                        <span class="badge bg-danger">Error</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-info">@profile.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td><code>@profile.ServerNodeIp</code></td>
                                            <td><small class="text-muted">@profile.CreatedAt.ToString("yyyy-MM-dd")</small></td>
                                            <td><small class="text-muted">@profile.TotalRunTime min</small></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">
                            <i class="bi bi-inbox fs-1"></i><br />
                            No browser profiles
                        </p>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column - Quick Actions & Stats -->
        <div class="col-xl-4">
            <!-- Quick Actions Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#adjustBalanceModal">
                            <i class="bi bi-cash-stack"></i> Adjust Balance
                        </button>

                        @if (Model.IsBanned)
                        {
                            <form asp-action="Unban" asp-route-id="@Model.Id" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-check-circle"></i> Unban User
                                </button>
                            </form>
                        }
                        else
                        {
                            <button class="btn btn-danger" onclick="banUser(@Model.Id, '@Model.Username')">
                                <i class="bi bi-ban"></i> Ban User
                            </button>
                        }

                        @if (Model.IsFrozen)
                        {
                            <form asp-action="Unfreeze" asp-route-id="@Model.Id" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-info w-100">
                                    <i class="bi bi-unlock"></i> Unfreeze Account
                                </button>
                            </form>
                        }
                        else
                        {
                            <button class="btn btn-warning" onclick="freezeUser(@Model.Id, '@Model.Username')">
                                <i class="bi bi-snow"></i> Freeze Account
                            </button>
                        }

                        <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#resetPasswordModal">
                            <i class="bi bi-key"></i> Reset Password
                        </button>

                        <hr />

                        <a asp-action="Logs" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                            <i class="bi bi-file-text"></i> View Audit Logs
                        </a>

                        <button class="btn btn-outline-danger" onclick="deleteUser(@Model.Id, '@Model.Username')">
                            <i class="bi bi-trash"></i> Delete User
                        </button>
                    </div>
                </div>
            </div>

            <!-- Stats Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Statistics</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6 class="text-xs text-muted mb-1">TOTAL PROFILES</h6>
                        <p class="mb-0 h4">@Model.BrowserProfiles.Count</p>
                    </div>
                    <div class="mb-3">
                        <h6 class="text-xs text-muted mb-1">TOTAL PAYMENTS</h6>
                        <p class="mb-0 h4">@Model.Payments.Count</p>
                    </div>
                    <div class="mb-3">
                        <h6 class="text-xs text-muted mb-1">TOTAL SPENT</h6>
                        <p class="mb-0 h4 text-success">
                            $@Model.Payments.Where(p => p.Status == MaskAdmin.Models.PaymentStatus.Completed).Sum(p => p.Amount).ToString("N2")
                        </p>
                    </div>
                    <div class="mb-0">
                        <h6 class="text-xs text-muted mb-1">ACCOUNT AGE</h6>
                        <p class="mb-0">
                            @{
                                var accountAge = DateTime.UtcNow - Model.CreatedAt;
                                if (accountAge.TotalDays < 1)
                                {
                                    <span>@((int)accountAge.TotalHours) hours</span>
                                }
                                else if (accountAge.TotalDays < 30)
                                {
                                    <span>@((int)accountAge.TotalDays) days</span>
                                }
                                else if (accountAge.TotalDays < 365)
                                {
                                    <span>@((int)(accountAge.TotalDays / 30)) months</span>
                                }
                                else
                                {
                                    <span>@((int)(accountAge.TotalDays / 365)) years</span>
                                }
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit User Modal -->
<div class="modal fade" id="editUserModal" tabindex="-1" aria-labelledby="editUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editUserModalLabel">Edit User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-action="Edit" asp-route-id="@Model.Id">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username" name="username" value="@Model.Username" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" value="@Model.Email" required>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="isActive" name="isActive" checked="@Model.IsActive">
                            <label class="form-check-label" for="isActive">
                                Active
                            </label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="isAdmin" name="isAdmin" checked="@Model.IsAdmin">
                            <label class="form-check-label" for="isAdmin">
                                Administrator
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Adjust Balance Modal -->
<div class="modal fade" id="adjustBalanceModal" tabindex="-1" aria-labelledby="adjustBalanceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="adjustBalanceModalLabel">Adjust Balance</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-action="AdjustBalance" asp-route-id="@Model.Id">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Current Balance</label>
                        <p class="h4 text-success">$@Model.Balance.ToString("N2")</p>
                    </div>
                    <div class="mb-3">
                        <label for="amount" class="form-label">Amount (use negative to deduct)</label>
                        <input type="number" step="0.01" class="form-control" id="amount" name="amount" required>
                        <div class="form-text">Example: 100 to add, -50 to deduct</div>
                    </div>
                    <div class="mb-3">
                        <label for="reason" class="form-label">Reason</label>
                        <textarea class="form-control" id="reason" name="reason" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Adjust Balance</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Subscription Modal -->
<div class="modal fade" id="subscriptionModal" tabindex="-1" aria-labelledby="subscriptionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="subscriptionModalLabel">Manage Subscription</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-action="AssignSubscription" asp-route-id="@Model.Id">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="tier" class="form-label">Subscription Tier</label>
                        <select class="form-select" id="tier" name="tier" required>
                            <option value="0">Free</option>
                            <option value="1">Basic</option>
                            <option value="2">Pro</option>
                            <option value="3">Enterprise</option>
                            <option value="4">Custom</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="maxProfiles" class="form-label">Max Profiles</label>
                        <input type="number" class="form-control" id="maxProfiles" name="maxProfiles" value="100" required>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" step="0.01" class="form-control" id="price" name="price" value="0" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Subscription</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Reset Password Modal -->
<div class="modal fade" id="resetPasswordModal" tabindex="-1" aria-labelledby="resetPasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="resetPasswordModalLabel">Reset Password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-action="ResetPassword" asp-route-id="@Model.Id">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        This will reset the user's password. They will need to use the new password to log in.
                    </div>
                    <div class="mb-3">
                        <label for="newPassword" class="form-label">New Password</label>
                        <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Reset Password</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function banUser(userId, username) {
            if (confirm(`Are you sure you want to ban user "${username}"?`)) {
                const reason = prompt('Please enter ban reason:');
                if (reason) {
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = `/Users/Ban/${userId}`;

                    const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                    const tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '__RequestVerificationToken';
                    tokenInput.value = token;
                    form.appendChild(tokenInput);

                    const reasonInput = document.createElement('input');
                    reasonInput.type = 'hidden';
                    reasonInput.name = 'reason';
                    reasonInput.value = reason;
                    form.appendChild(reasonInput);

                    document.body.appendChild(form);
                    form.submit();
                }
            }
        }

        function freezeUser(userId, username) {
            if (confirm(`Are you sure you want to freeze user "${username}"'s account?`)) {
                const reason = prompt('Please enter freeze reason:');
                if (reason) {
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = `/Users/Freeze/${userId}`;

                    const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                    const tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '__RequestVerificationToken';
                    tokenInput.value = token;
                    form.appendChild(tokenInput);

                    const reasonInput = document.createElement('input');
                    reasonInput.type = 'hidden';
                    reasonInput.name = 'reason';
                    reasonInput.value = reason;
                    form.appendChild(reasonInput);

                    document.body.appendChild(form);
                    form.submit();
                }
            }
        }

        function deleteUser(userId, username) {
            if (confirm(`Are you sure you want to DELETE user "${username}"? This action cannot be undone!`)) {
                if (confirm('This will permanently delete all user data including profiles and payments. Are you absolutely sure?')) {
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = `/Users/Delete/${userId}`;

                    const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                    const tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '__RequestVerificationToken';
                    tokenInput.value = token;
                    form.appendChild(tokenInput);

                    document.body.appendChild(form);
                    form.submit();
                }
            }
        }
    </script>
}
