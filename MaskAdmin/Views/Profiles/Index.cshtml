@model (List<MaskAdmin.Models.BrowserProfile> Profiles, int TotalCount, int CurrentPage, int PageSize, int? UserId, MaskAdmin.Models.ProfileStatus? Status, int? ServerId)
@{
    ViewData["Title"] = "Browser Profiles";
    ViewData["LayoutClass"] = "container-fluid";

    var totalPages = (int)Math.Ceiling((double)Model.TotalCount / Model.PageSize);
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="bi bi-browser-chrome"></i> Browser Profiles
        </h1>
    </div>

    <!-- Alert Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filters Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="bi bi-funnel"></i> Filters
            </h6>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3">
                <div class="col-md-3">
                    <label for="userId" class="form-label">User ID</label>
                    <input type="number" class="form-control" id="userId" name="userId"
                           value="@Model.UserId" placeholder="Filter by User ID">
                </div>
                <div class="col-md-3">
                    <label for="status" class="form-label">Status</label>
                    <select class="form-select" id="status" name="status">
                        <option value="">All Statuses</option>
                        <option value="0" selected="@(Model.Status == MaskAdmin.Models.ProfileStatus.Stopped)">Stopped</option>
                        <option value="1" selected="@(Model.Status == MaskAdmin.Models.ProfileStatus.Starting)">Starting</option>
                        <option value="2" selected="@(Model.Status == MaskAdmin.Models.ProfileStatus.Running)">Running</option>
                        <option value="3" selected="@(Model.Status == MaskAdmin.Models.ProfileStatus.Stopping)">Stopping</option>
                        <option value="4" selected="@(Model.Status == MaskAdmin.Models.ProfileStatus.Error)">Error</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="serverId" class="form-label">Server ID</label>
                    <input type="number" class="form-control" id="serverId" name="serverId"
                           value="@Model.ServerId" placeholder="Filter by Server ID">
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Apply Filters
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Profiles Table Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                Browser Profiles (@Model.TotalCount total)
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>User</th>
                            <th>Server</th>
                            <th>Status</th>
                            <th>Container ID</th>
                            <th>Port</th>
                            <th>Created</th>
                            <th>Runtime</th>
                            <th>Starts</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Profiles.Any())
                        {
                            @foreach (var profile in Model.Profiles)
                            {
                                <tr>
                                    <td><code>@profile.Id</code></td>
                                    <td>
                                        <strong>@profile.Name</strong>
                                    </td>
                                    <td>
                                        @if (profile.User != null)
                                        {
                                            <a asp-controller="Users" asp-action="Details" asp-route-id="@profile.UserId">
                                                @profile.User.Username
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">ID: @profile.UserId</span>
                                        }
                                    </td>
                                    <td>
                                        <small><code>@profile.ServerNodeIp</code></small>
                                    </td>
                                    <td>
                                        @switch (profile.Status)
                                        {
                                            case MaskAdmin.Models.ProfileStatus.Stopped:
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-stop-circle"></i> Stopped
                                                </span>
                                                break;
                                            case MaskAdmin.Models.ProfileStatus.Starting:
                                                <span class="badge bg-info">
                                                    <i class="bi bi-arrow-clockwise"></i> Starting
                                                </span>
                                                break;
                                            case MaskAdmin.Models.ProfileStatus.Running:
                                                <span class="badge bg-success">
                                                    <i class="bi bi-play-circle"></i> Running
                                                </span>
                                                break;
                                            case MaskAdmin.Models.ProfileStatus.Stopping:
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-arrow-clockwise"></i> Stopping
                                                </span>
                                                break;
                                            case MaskAdmin.Models.ProfileStatus.Error:
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-exclamation-triangle"></i> Error
                                                </span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <small><code title="@profile.ContainerId">@(profile.ContainerId.Length > 12 ? profile.ContainerId.Substring(0, 12) : profile.ContainerId)</code></small>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@profile.Port</span>
                                    </td>
                                    <td>
                                        <small class="text-muted">@profile.CreatedAt.ToString("yyyy-MM-dd")</small>
                                    </td>
                                    <td>
                                        <small class="text-muted">@profile.TotalRunTime min</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@profile.StartCount</span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            @if (profile.Status == MaskAdmin.Models.ProfileStatus.Stopped || profile.Status == MaskAdmin.Models.ProfileStatus.Error)
                                            {
                                                <form asp-action="Start" asp-route-id="@profile.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-success btn-sm" title="Start">
                                                        <i class="bi bi-play-circle"></i>
                                                    </button>
                                                </form>
                                            }
                                            @if (profile.Status == MaskAdmin.Models.ProfileStatus.Running)
                                            {
                                                <form asp-action="Stop" asp-route-id="@profile.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-danger btn-sm" title="Stop">
                                                        <i class="bi bi-stop-circle"></i>
                                                    </button>
                                                </form>
                                                <form asp-action="Restart" asp-route-id="@profile.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-warning btn-sm text-white" title="Restart">
                                                        <i class="bi bi-arrow-clockwise"></i>
                                                    </button>
                                                </form>
                                            }
                                            <button type="button" class="btn btn-danger btn-sm"
                                                    onclick="deleteProfile(@profile.Id, '@profile.Name')" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="11" class="text-center text-muted py-4">
                                    <i class="bi bi-inbox fs-1"></i>
                                    <p class="mt-2">No browser profiles found</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (totalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-3">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="?page=@(Model.CurrentPage - 1)&userId=@Model.UserId&status=@Model.Status&serverId=@Model.ServerId">
                                Previous
                            </a>
                        </li>

                        @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(totalPages, Model.CurrentPage + 2); i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?page=@i&userId=@Model.UserId&status=@Model.Status&serverId=@Model.ServerId">
                                    @i
                                </a>
                            </li>
                        }

                        <li class="page-item @(Model.CurrentPage == totalPages ? "disabled" : "")">
                            <a class="page-link" href="?page=@(Model.CurrentPage + 1)&userId=@Model.UserId&status=@Model.Status&serverId=@Model.ServerId">
                                Next
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteProfile(profileId, profileName) {
            if (confirm(`Are you sure you want to delete profile "${profileName}" (ID: ${profileId})?`)) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/Profiles/Delete/${profileId}`;

                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = token;
                form.appendChild(tokenInput);

                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
}
